{
  "private": true,
  "name": "git-proxy-switcher",
  "author": "leslie",
  "description": "switch git proxy",
  "version": "0.0.1",
  "scripts": {
    "start:umi": "umi dev",
    "build": "umi build",
    "test": "umi test",
    "lint": "eslint {src,mock,tests}/**/*.{ts,tsx} --fix",
    "precommit": "lint-staged",
    "start:electron": "cross-env NODE_ENV=development electron-webpack dev",
    "build:electron:prod": "cross-env NODE_ENV=production webpack --config ./build/webpack.main.prod.config.js",
    "build:electron:dev": "cross-env NODE_ENV=development webpack --config ./build/webpack.main.config.js",
    "pack": "npm-run-all --serial build build:electron:prod electron:pack",
    "start:all": "npm-run-all --parallel start:umi start:electron",
    "electron:pack": "electron-builder --dir"
  },
  "dependencies": {
    "antd": "^3.19.5",
    "dva": "^2.6.0-beta.6",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "babel-eslint": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.7",
    "electron-builder": "^22.10.5",
    "electron-debug": "^3.2.0",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "eslint": "^5.4.0",
    "eslint-config-umi": "^1.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.11.1",
    "fkill": "^7.1.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "^16.7.0",
    "umi": "^2.9.0",
    "umi-plugin-react": "^1.8.0",
    "umi-types": "^0.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "./dist/main/main.js",
  "electronWebpack": {
    "main": {
      "sourceDirectory": "electron"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "build": {
    "appId": "git-proxy-switcher",
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
